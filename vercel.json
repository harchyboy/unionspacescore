{
  "buildCommand": "pnpm run build:vercel",
  "outputDirectory": "dist",
  "installCommand": "pnpm install",
  "framework": null,
  "cleanUrls": false,
  "trailingSlash": false,
  "rewrites": [
    { "source": "/api/:path*", "destination": "/api/:path*" },
    { "source": "/((?!api/)(?!.*\\.).*)", "destination": "/index.html" }
  ],
  "crons": [
    {
      "path": "/api/sync?apiKey=${SYNC_API_KEY}&action=sync",
      "schedule": "0 * * * *"
    }
  ]
}

